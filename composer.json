{
    "name": "douglasgreen/taskmaster",
    "description": "A to-do list manager",
    "license": "MIT",
    "type": "library",
    "homepage": "https://github.com/douglasgreen/taskmaster",
    "authors": [
        {
            "name": "Douglas Green",
            "email": "douglas@nurd.site",
            "homepage": "https://nurd.site/",
            "role": "Developer"
        }
    ],
    "keywords": [
        "mysql",
        "php",
        "task",
        "task list",
        "task manager",
        "task organizer",
        "task scheduler",
        "task tracker",
        "todo",
        "todo list"
    ],
    "autoload": {
        "psr-4": {
            "DouglasGreen\\TaskMaster\\": "src/",
            "DouglasGreen\\TaskMaster\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=8.1",
        "douglasgreen/optparser": "dev-main",
        "douglasgreen/utility": "dev-main"
    },
    "require-dev": {
        "douglasgreen/config-setup": "dev-main",
        "phpmd/phpmd": "^2.15",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^10.5",
        "rector/rector": "^1.0",
        "symplify/easy-coding-standard": "^12.2"
    },
    "scripts": {
        "lint": [
            "ecs",
            "phpstan analyse",
            "phpmd --cache --cache-file var/cache/phpmd/cache.php . text phpmd.xml",
            "rector --dry-run"
        ],
        "lint:fix": [
            "ecs --fix",
            "rector"
        ],
        "post-install-cmd": "vendor/douglasgreen/config-setup/bin/copy_files.php",
        "post-update-cmd": "vendor/douglasgreen/config-setup/bin/copy_files.php",
        "test": "phpunit"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/douglasgreen/config-setup"
        },
        {
            "type": "vcs",
            "url": "https://github.com/douglasgreen/utility"
        }
    ]
}
