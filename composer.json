{
    "name": "douglasgreen/taskmaster",
    "description": "A to-do list manager",
    "license": "MIT",
    "type": "library",
    "homepage": "https://github.com/douglasgreen/taskmaster",
    "authors": [
        {
            "name": "Douglas Green",
            "email": "douglas@nurd.site",
            "homepage": "https://nurd.site/",
            "role": "Developer"
        }
    ],
    "keywords": [
        "mysql",
        "php",
        "task",
        "task list",
        "task manager",
        "task organizer",
        "task scheduler",
        "task tracker",
        "todo",
        "todo list"
    ],
    "autoload": {
        "psr-4": {
            "DouglasGreen\\TaskMaster\\": "src/",
            "DouglasGreen\\TaskMaster\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=8.1",
        "douglasgreen/utility": "dev-main"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.11",
        "phpunit/phpunit": "^10.5",
        "rector/rector": "^1.2",
        "symplify/easy-coding-standard": "^12.3"
    },
    "scripts": {
        "lint": [
            "ecs",
            "php-linter",
            "phpstan analyse",
            "rector --dry-run"
        ],
        "lint:fix": [
            "ecs --fix",
            "rector"
        ],
        "post-install-cmd": "config-setup --pre-commit",
        "post-update-cmd": "config-setup --pre-commit",
        "test": "phpunit"
    }
}
