{
    "name": "douglasgreen/taskmaster",
    "description": "A to-do list manager",
    "license": "MIT",
    "type": "library",
    "homepage": "https://github.com/douglasgreen/taskmaster",
    "authors": [
        {
            "name": "Douglas Green",
            "email": "douglas@nurd.site",
            "homepage": "https://nurd.site/",
            "role": "Developer"
        }
    ],
    "keywords": [
        "mysql",
        "php",
        "task",
        "task list",
        "task manager",
        "task organizer",
        "task scheduler",
        "task tracker",
        "todo",
        "todo list"
    ],
    "autoload": {
        "psr-4": {
            "DouglasGreen\\TaskMaster\\": "src/",
            "DouglasGreen\\TaskMaster\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=8.1",
        "douglasgreen/optparser": "^0.8",
        "douglasgreen/utility": "^0.1"
    },
    "require-dev": {
        "phpmd/phpmd": "^2.15",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^10.5",
        "rector/rector": "^1.0",
        "symplify/easy-coding-standard": "^12.2"
    },
    "scripts": {
        "lint": [
            "ecs",
            "rector --dry-run",
            "./run_phpmd.sh",
            "./run_phpstan.sh"
        ],
        "lint:fix": [
            "ecs --fix",
            "rector"
        ],
        "test": "phpunit"
    }
}
