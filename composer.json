{
    "name": "douglasgreen/taskmaster",
    "description": "A to-do list manager",
    "type": "library",
    "keywords": [
        "mysql",
        "php",
        "task",
        "task list",
        "task manager",
        "task organizer",
        "task scheduler",
        "task tracker",
        "todo",
        "todo list"
    ],
    "homepage": "https://github.com/douglasgreen/taskmaster",
    "license": "MIT",
    "authors": [
        {
            "name": "Douglas Green",
            "email": "douglas@nurd.site",
            "homepage": "https://nurd.site/",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=8.3",
        "douglasgreen/opt-parser": "^0.7.4"
    },
    "require-dev": {
        "phpstan/phpstan": "^2.1.39",
        "phpunit/phpunit": "^11.5.55",
        "rector/rector": "^2.3.7"
    },
    "autoload": {
        "psr-4": {
            "DouglasGreen\\TaskMaster\\": "src/",
            "DouglasGreen\\TaskMaster\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "lint": [
            "detect-collisions",
            "phpstan analyse",
            "rector --dry-run"
        ],
        "lint:fix": [
            "rector"
        ],
        "test": "phpunit"
    }
}
